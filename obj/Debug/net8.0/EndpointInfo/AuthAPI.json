{
  "openapi": "3.0.1",
  "info": {
    "title": "AuthAPI",
    "version": "1.0"
  },
  "paths": {
    "/api/Auth/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
